<!-- app/views/dialogs/login.xml -->
<window title="用户登录" size="400,300" modal="true">
    <vbox padding="true">
        <label style="title">欢迎使用 {{app_name}}</label>
        <separator/>

        <form layout="grid">
            <field label="用户名">
                <entry bind="loginForm.username" placeholder="请输入用户名" focus="true"/>
            </field>
            <field label="密码">
                <entry type="password" bind="loginForm.password" placeholder="请输入密码"/>
            </field>
            <field label="">
                <checkbox text="记住我" bind="loginForm.remember"/>
            </field>
            <field label="">
                <actions>
                    <button onclick="doLogin" primary="true">登录</button>
                    <button onclick="cancelLogin">取消</button>
                </actions>
            </field>
        </form>

        <separator/>
        <hbox>
            <link onclick="showRegister">注册新用户</link>
            <spacer/>
            <link onclick="forgotPassword">忘记密码?</link>
        </hbox>
    </vbox>
</window>