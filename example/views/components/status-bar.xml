<!-- app/views/components/status-bar.xml -->
<hbox padding="true" background="gray-200" border-top="true">
    <!-- 左侧状态信息 -->
    <hbox>
        <label id="statusText">{{$status ?? '就绪'}}</label>
        <separator orientation="vertical"/>
        <label>内存: {{$memory_usage ?? '0'}}MB</label>
        <separator orientation="vertical"/>
        <label>CPU: {{$cpu_usage ?? '0'}}%</label>
    </hbox>

    <spacer/>

    <spacer/>
    <hbox>
        <label id="online">在线用户: {{count($online_users ?? [])}}</label>
        <separator orientation="vertical"/>
        <label id="date">{{date('Y-m-d H:i:s')}}</label>
        <separator orientation="vertical"/>
        <button onclick="toggleFullscreen" style="small">全屏</button>
    </hbox>
</hbox>