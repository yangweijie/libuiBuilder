{
  "name": "yangweijie/libui-builder",
  "description": "Builder 方式开发 kingbes/libui gui 应用",
  "type": "library",
  "require": {
    "ext-dom": "*",
    "ext-ffi": "*",
    "ext-libxml": "*",
    "kingbes/libui": "0.1.*",
    "ffi/var-dumper": "1.0.x-dev",
    "league/event": "^3.0",
    "league/config": "^1.2",
    "nette/schema": "^1.3",
    "php-di/php-di": "^7.0",
    "psr/container": "^2.0"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Kingbes\\Libui\\View\\": "src/",
      "Kingbes\\Libui\\View\\Builder\\": "src/Builder/",
      "Kingbes\\Libui\\View\\State\\": "src/State/",
      "Tests\\": "tests/"
    },
    "files": [
      "src/helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "yangweijie",
      "email": "917647288@qq.com"
    }
  ],
  "minimum-stability": "dev",
  "require-dev": {
    "pestphp/pest": "*",
    "phpunit/phpunit": "*",
    "pestphp/pest-plugin": "4.x-dev",
    "symfony/finder": "^6.0"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "scripts": {
    "test": "pest",
    "test-coverage": "pest --coverage",
    "docs": "@php tools/GenerateDocs.php",
    "migrate": "@php tools/MigrateLegacyCode.php"
  }
}
